<%-include("navbar.ejs")%>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h3 class="heading">Edit Department</h3>
        </div>
    </div>
</div>

<form action="/admin/update_department" method="post" enctype="multipart/form-data">
    <input type="hidden" name="department_id" id="" value="<%=depart.department_id%>">
    <div class="container">
    <div class="row my-3">
        <div class="col-md-6">
           <h6><b>Department Image : </b></h6> <input type="file" name="department_img" id="" class="form-control">
        </div>
        <div class="col-md-6">
            <img src="/uploads/<%=depart.department_img%>" alt="" height="100px"  >
        </div>
    </div>
</div>

<div class="container">
    <div class="row my-2">
        <div class="col-md-12">
            <h6><b>Department Text : </b></h6> <input type="text" name="department_text" id="" class="form-control " value="<%=depart.department_text%>">
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="d-grid gap-2 col-4 mx-auto mt-4">
            <button class="btn btn-primary btn-md ps-4 pe-4" type="submit">Save</button>
        </div>
    </div>
</div>

</form>

<%-include("footer.ejs")%>
