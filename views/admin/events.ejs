<%- include("navbar.ejs") %>

<div class="container">
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center align-items-center text-center gradient-background heading">
            <h3 class="text-dark" style="font-weight: 600;">Add Recent Events</h3>
        </div>
    </div>
    <div class="row mt-5">
        <form action="/admin/add_events" method="post" class="m-4" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4">
                    Upload Events Image
                    <input type="file" required name="events_img" accept="image/*" class="form-control">
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-6">
                   Events Name
                    <input type="text" name="events_name" class="form-control" value="" required>
                </div>
                <div class="col-md-12 d-flex justify-content-center mt-4">
                    <button class="btn btn-success">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-success table-striped table-bordered mt-4">
  <tr>
      <th>Action</th>
      <th>SrNO</th>
      <th>Events Name</th>
      <th>Events Image</th>
      
  </tr>
  <%for(var i=0;i<events_info.length;i++) {%>
  <tr>
    <td>
      <a href="/admin/edit_events_info/<%=events_info[i].recent_events_id%>">
        <i class="fa fa-edit text-success fs-3"></i>
      </a>
      <a href="/admin/delete_events_info/<%=events_info[i].recent_events_id%>" onclick="return confirm('Are You Sure?')">
        <i class="fa fa-trash text-danger fs-3"></i>
      </a>
    </td>   
     <td><%=i+1%></td>
    <td><%=events_info[i].events_name%></td>
    <td>
      <img src="/admin/uploads/<%=events_info[i].events_img%>" height="100px " width="100px">
    </td>
</tr>
<%}%></table>
<%- include("footer.ejs") %>
