<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

<div class="body flex-grow-1 px-3">
  <div class="container-lg">
    <div class="row text-center mb-5 heading">
      <h2>Student Data</h2>
    </div>

    <div class="row">
      <div class="col-sm-6 col-lg-4">
        <div class="card mb-4 text-white bg-primary ">
          <div class="card-body pb-0 d-flex justify-content-between align-items-start">
            <div>
              <div class="fs-4 fw-semibold">Total Students </div>
              <span class="fs-2"><%=approve%></span>
            </div>
            <div class="dropdown">
              <button class="btn btn-transparent text-white p-0" type="button" data-coreui-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <svg class="icon">
                  <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-options"></use>
                </svg>
              </button>
              <div class="dropdown-menu dropdown-menu-end"><a class="dropdown-item" href="#">Action</a><a class="dropdown-item" href="#">Another action</a><a class="dropdown-item" href="#">Something else here</a></div>
            </div>
          </div>
          <div class="c-chart-wrapper mt-3 mx-3" style="height:70px;">
            <canvas class="chart" id="card-chart1" height="70"></canvas>
          </div>
        </div>
      </div>
      <!-- /.col-->
      <div class="col-sm-6 col-lg-4">
        <div class="card mb-4 text-white bg-warning">
          <div class="card-body pb-0 d-flex justify-content-between align-items-start">
            <div>
              <div class="fs-4 fw-semibold text-center">
                <h4 style="text-align: center;">Daily Presenty</h4>
              </div>
              <!-- <span class="fs-2">599</span> -->
            </div>
          </div>
          <div class="c-chart-wrapper mt- mx-" style="height:40px;">
            <canvas class="chart" id="card-chart1" height="70"></canvas>
          </div>
          <div class="row mt-3 ps-2 pe-2 pb-2">
            <div class="col-6">
              <div class="card bg-success text-white p-2">
                <div class="card-body p-0">
                  <div class="fs-6 fw-semibold ">Present </div>
                  <span class="fs-5">300</span>
                </div>
              </div>
            </div>
            <div class="col-6">
              <div class="card bg-danger text-white p-2">
                <div class="card-body p-0">
                  <div class="fs-6 fw-semibold ">Absent </div>
                  <span class="fs-5">299</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-lg-4">
        <div class="card mb-4 text-white bg-dark">
          <div class="card-body pb-0 d-flex justify-content-between align-items-start">
            <div>
              <div class="fs-4 fw-semibold">New Admission </div>
              <span class="fs-2">599</span>
            </div>
            <div class="dropdown">
              <button class="btn btn-transparent text-white p-0" type="button" data-coreui-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <svg class="icon">
                  <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-options"></use>
                </svg>
              </button>
              <div class="dropdown-menu dropdown-menu-end"><a class="dropdown-item" href="#">Action</a><a class="dropdown-item" href="#">Another action</a><a class="dropdown-item" href="#">Something else here</a></div>
            </div>
          </div>
          <div class="c-chart-wrapper mt-3 mx-3" style="height:70px;">
            <canvas class="chart" id="card-chart1" height="70"></canvas>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <a href="/admin/approve_student">
      <div class="col-sm-6 col-lg-4">
        <div class="card mb-4 text-white bg-secondary">
          <div class="card-body pb-0 d-flex justify-content-between align-items-start">
            <div>
              <div class="fs-4 fw-semibold text-center">
                <h4 style="text-align: center;color: white;">Student Approval</h4>
              </div>
              <!-- <span class="fs-2">599</span> -->
            </div>
          </div>
          <div class="c-chart-wrapper mt- mx-" style="height:40px;">
            <canvas class="chart" id="card-chart1" height="70"></canvas>
          </div>
          <div class="row mt-3 ps-2 pe-2 pb-2">
            <div class="col-6">
              <div class="card bg-success text-white p-2">
                <a href="/admin/approved_list">
                <div class="card-body p-0">
                  <div class="fs-6 fw-semibold text-white">Approved </div>
                  <span class="fs-5 text-white"><%=approve%></span>
                </div>
              </div>
            </a>
            </div>
            <div class="col-6">
              <div class="card bg-danger text-white p-2">
                <a href="/admin/rejected_list">
                <div class="card-body p-0">
                  <div class="fs-6 fw-semibold text-white ">Rejected </div>
                  <span class="fs-5 text-white"><%=reject%></span>
                </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </a>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="heading text-center">
      <h3>Student List</h3>
    </div>
  </div>
</div>

<div class="container mt-2">
  <div class="row">
    <div class="col-md-12 ">
      <table id="myTable" class=" table table-primary bordered ">
        <thead>
          <tr>
            <th>Sr.No</th>
            <th>Info</th>
            <th>Student Name</th>
            <th>Class</th>
            <th>Birth Date</th>
          </tr>
        </thead>
        <tbody>
          <% var i=0;
            student.map((val)=>{  
              i++;
          %>
          <tr>
            <td><%= i %></td>
            <td class=""><i class="fa fa-info fs-5 border border-primary p-1 ps-2 pe-2"></i></td>
            <td><%= val.admfull_first %> <%= val.admfull_middle %> <%= val.admfull_last %></td>
            <td><%= val.stud_class %></td>
            <td><%= val.std_email %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#myTable').DataTable();
  });
</script>

