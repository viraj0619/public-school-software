<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <section>
                <div class="container4"></div>
                <div id="open-modal" class="">
                    <div>
                        <div class="row bg-light" style="display: flex; justify-content: center;">
                            <form id="admissionForm" method="post" class="row g-2 p-3">
                                <div class="my-md-3 col-6 col-md-4">
                                    <label for="validationDefault04" class="form-label lablefs text-dark">Select Class :-</label>
                                    <select class="form-select py-2 alt" required id="validationDefault04" name="selected_class" onchange="handleChange(event)">
